<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ResultActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="30sp"
        android:textAlignment="center"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:textColor="@color/purple_200"

        />
    <TextView
        android:id="@+id/bestResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Result : "
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginBottom="16dp"/>

    <!-- ফলাফল দেখানোর জন্য TextView -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Result"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- স্কোর দেখানোর জন্য TextView -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- মোট প্রশ্নের সংখ্যা দেখানোর জন্য TextView -->
    <TextView
        android:id="@+id/totalQuestionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Questions: 0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>


</LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_margin="55dp"
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/btnBackId"
        />



</LinearLayout>